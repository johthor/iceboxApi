{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Consumer",
  "id": "http://http://chaotikum.org/hackerspace:nbsp/icebox/schemas/consumer.json",
  "description": "A consumer drinking your precious icebox contents",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "nickname": {
      "type": "string",
      "minLength": 1
    },
    "balance": {
      "type": "number"
    },
    "manager": {
      "type": "boolean"
    }
  },
  "required": [
    "id",
    "nickname"
  ]
}

